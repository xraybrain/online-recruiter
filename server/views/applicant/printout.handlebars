<div class="container-fluid">
  <div class="row" style="overflow: hidden;">
    <div class="col-md-9 px-2 mx-auto">
      <div class="d-flex justify-content-between mt-3 flex-wrap">
        <div class="alert alert-warning">
          <p class="text-center mb-0 pb-0">
            <i class="fas fa-exclamation-triangle"></i>
            You must bring a copy of this printout while coming for interview.
          </p>
        </div>
        <div class="text-right">
          <button type="button" class="btn btn-default" id="btn-print">
            <i class="fas fa-print"></i>
            print
          </button>
        </div>
      </div>

      <div class="card printable my-3">
        <div class="card-header bg-white border-0 p-1">
          <h5 class="card-title d-flex align-items-center">
            <img src="/resources/img/logo.png" alt="logo" class="logo">
            <span class="ml-2">
              Lobic Recruitment Application Form
            </span>
          </h5>
        </div>
        <div class="card-body p-1">
          <div id="printable">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title text-muted">Personnal Details</h5>
              </div>
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-12 col-md-6 col-lg-4">
                    <div class="text-center">
                      {{#if applicant.pictureDir}}
                      <img src="{{applicant.pictureDir}}" alt="applicant passport" class="passport" />
                      {{else}}
                      <img src="/resources/img/user.png" alt="applicant passport" class="passport" />
                      {{/if}}
                    </div>
                  </div>
                  <div class="col-12 col-md-6 col-lg-8">
                    <div class="card">
                      <div class="card-body">
                        <table class="table table-hover">
                          <tbody>
                            <tr>
                              <th>First Name</th>
                              <td>{{applicant.firstName}}</td>
                            </tr>
                            <tr>
                              <th>Last Name</th>
                              <td>{{applicant.lastName}}</td>
                            </tr>
                            <tr>
                              <th>Middle Name</th>
                              <td>{{applicant.middleName}}</td>
                            </tr>
                            <tr>
                              <th>DateOfBirth</th>
                              <td>{{applicant.dateOfBirth}}</td>
                            </tr>
                            <tr>
                              <th>Mobile No</th>
                              <td>{{applicant.phoneNo}}</td>
                            </tr>
                            <tr>
                              <th>Email</th>
                              <td>{{applicant.emailAddress}}</td>
                            </tr>
                            <tr>
                              <th>Vacancy</th>
                              <td>{{applicant.vacancyName}}</td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-8 my-2">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title text-muted">Education</h5>
                  </div>
                  <div class="card-body scroll">
                    <table class="table table-hover table-sm table-bordered">
                      <thead>
                        <tr>
                          <th>School</th>
                          <th>Certificate</th>
                          <th>Start Date</th>
                          <th>End Date</th>
                        </tr>
                      </thead>
                      {{#each certificates}}
                      <tr>
                        <td>{{school}}</td>
                        <td>{{title}}</td>
                        <td>{{startDate}}</td>
                        <td>{{endDate}}</td>
                      </tr>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 my-2">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title text-muted">Exam Summary</h5>
                  </div>
                  <div class="card-body scroll">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <td>Subject</td>
                          <td>Score</td>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each summary.examResults}}
                        <tr>
                          <td>{{subjectName}}</td>
                          <td>{{score}}</td>
                        </tr>
                        {{/each}}
                        <tr>
                          <th>Total score</th>
                          <td>{{summary.totalScore}}</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card-footer text-right text-muted bg-white border-0">
          <span>...your hospitality is our concern</span>
        </div>

      </div>
    </div>
  </div>
</div>



<!-- The Mail Modal -->
<div class="modal fade mt-5" id="mailModal">
  <div class="modal-dialog modal-dialog-md">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title text-muted d-flex align-items-center">
          <i class="fas fa-pencil-alt mr-1 text-primary"></i>
          Mail Composer
        </h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form action="/admin/send/mail/" method="post">
          <input type="hidden" name="id" value="{{applicant.id}}" />
          <div class="form-group">
            <div class="form-control d-flex align-items-center">
              <span class="mr-2">to:</span>
              <input type="text" name="emailAddress" value="{{applicant.emailAddress}}" readonly="readonly" />
            </div>
          </div>
          <div class="form-group input-group">
            <input type="text" name="subject" value="INTERVIEW APPOINTMENT" class="form-control"
              placeholder="subject" />
          </div>
          <div class="form-group">
            <textarea name="message" rows="4" class="form-control"
              placeholder="message">Dear {{applicant.firstName}} {{applicant.lastName}}, we are pleased to inform you that you are required to come to our company within 5 days you received this mail for an interview. Thank you. Signed management.</textarea>
          </div>
          <div class="form-group">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
              <button type="submit" class="btn btn-block btn-primary">
                Send Mail
                <i class="fas fa-paper-plane"></i>
              </button>
            </div>
          </div>
        </form>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>