          <span id="optionB" class="ml-2">\{{question.optionB}}</span>
        </label>
      </td>
    </tr>
    <tr>
      <td>
        <label for="option-c" class="d-flex align-items-center">
          <span class="mr-2">c</span>
          <input type="radio" name="option" id="option-c" class="radio option" value="c"  data-qid="\{{question.id}}" \{{#checked}}c\{{/checked}}/>
          <span id="optionC" class="ml-2">\{{question.optionC}}</span>
        </label>
      </td>
    </tr>
    <tr>
      <td>
        <label for="option-d">
          <span class="mr-2">d</span>
          <input type="radio" name="option" id="option-d" class="radio option" value="d" data-qid="\{{question.id}}" \{{#checked}}d\{{/checked}}/>
          <span id="optionD" class="ml-2">\{{question.optionD}}</span>
        </label>
      </td>
    </tr>
  </table>
</div>
</script>

<script src="/resources/js/examTimer.js"></script>