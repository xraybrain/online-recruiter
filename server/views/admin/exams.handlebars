<div class="container-fluid">
  <div class="row">
    {{>_admin_sidebar}}
    <div class="col-lg-10 col-md-9 normal-height bg-gray">
      <div class="container-fluid mt-1 mb-1 no-pd">
        <div class="row">
          <div class="col-md-10 mb-2">
            <form action="" method="GET">
              <div class="form-control d-flex align-items-center">
                <input type="search" name="searchText" class="w-100" placeholder="Search for subject by name" />
                <button type="submit" class="btn btn-sm bg-white">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </form>
          </div>
          <div class="col-md-2 mb-2">
            <button class="btn btn-block btn-primary" data-toggle="modal" data-target="#newModal">
              <i class="fas fa-plus"></i>
              <span>
                New subject
              </span>
            </button>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-white">
          <h5 class="card-title">
            Exam Subject(s)
          </h5>
        </div>
        <div class="card-body scroll">
          <table class="table table-striped table-md">
            <thead>
              <tr>
                <th>
                  #sn
                </th>
                <th>
                  Name
                </th>
                <th class="text-center">
                  Score per question
                </th>
                <th class="text-center">
                  Max Questions
                </th>
                <th>
                  Exam Limit (mins)
                </th>
                <th colspan="3" class="text-center">
                  Action
                  <i class="fas fa-cog"></i>
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each subjects}}
              <tr>
                <td>{{sn}}</td>
                <td>{{name}}</td>
                <td class="text-center">{{score}}</td>
                <td class="text-center">{{maximumAnswer}}</td>
                <td>{{examLimit}}</td>
                <td>
                  <a href="/admin/subject/questions/?sid={{id}}" class="btn btn-sm btn-info">
                    <i class="fas fa-info-circle mr-1"></i>
                    questions
                  </a>
                </td>
                <td>
                  <form action="/admin/edit/subject/" method="GET">
                    <input type="hidden" name="sid" value="{{id}}" />
                    <div class="form-group">
                      <button class="btn btn-sm btn-info">
                        <i class="fas fa-edit mr-1"></i>
                        Edit
                      </button>
                    </div>
                  </form>
                </td>
                <td>
                  <form action="/admin/delete/subject/" method="GET">
                    <input type="hidden" name="sid" value="{{id}}" />

                    <div class="form-group">
                      <button class="btn btn-sm btn-danger">
                        <i class="fas fa-trash mr-1"></i>
                        Delete
                      </button>
                    </div>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="card-footer">

        </div>
      </div>

    </div>
  </div>
</div>

<!-- The New Subject Modal -->
<div class="modal fade mt-5" id="newModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title">New Exam Subject</h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form class="p-1" action="/admin/save/subject/" method="POST">
          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Subject Name" autocomplete="off"
              required />
          </div>
          <div class="form-group">
            <input type="text" name="score" class="form-control" placeholder="Score per question" autocomplete="off"
              required />
          </div>
          <div class="form-group">
            <input type="number" name="maximumAnswer" class="form-control" placeholder="Maximum Questions"
              autocomplete="off" required />
          </div>
          <div class="form-group">
            <input type="number" name="examLimit" class="form-control" placeholder="Exam Limit in Minutes"
              autocomplete="off" required />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-block btn-success">
              <i class="fas fa-save mr-1"></i>
              Save Subject
            </button>
          </div>
        </form>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>