<div class="container my-5">
  <div class="card col-md-7 col-lg-5 mx-auto">
    <div class="card-body">
      <h5 class="text-muted text-center">
        Admin Login
      </h5>
      <hr />
      <form action="/admin/login/" method="post">
        <div class="form-group">
          <div class="form-control d-flex align-items-center">
            <i class="fas fa-envelope text-muted"></i>
            <input type="email" name="emailAddress" class="w-100 ml-1" placeholder="email@example.com"
              autocomplete="off" />
          </div>
        </div>

        <div class="form-group">
          <div class="form-control d-flex align-items-center">
            <i class="fas fa-lock text-muted"></i>
            <input type="password" name="password" class="w-100 ml-1" placeholder="password" autocomplete="off" />
          </div>
        </div>

        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-success">
            login
            <i class="fas fa-sign-in-alt"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>